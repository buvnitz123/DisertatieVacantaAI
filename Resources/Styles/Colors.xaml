<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Core theme palette (requested) -->
    <Color x:Key="DarkGray">#222831</Color>
    <Color x:Key="MediumGray">#393e46</Color>
    <Color x:Key="PrimaryBlue">#0092ca</Color>
    <Color x:Key="LightGray">#eeeeee</Color>

    <!-- Increased opacity for dark unselected (was #B0EEEEEE) -->
    <Color x:Key="TabUnselectedDark">#DDFFFFFF</Color>

    <!-- Basic neutrals -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <!-- Loading overlay background -->
    <Color x:Key="LoadingOverlayBackground">#80000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryBlue}" />
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}" />
    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource MediumGray}" />
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
</ResourceDictionary>