<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.ProfilePhotoPage"
             BackgroundColor="{StaticResource DarkGray}"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="30,60" Spacing="24">
        <Label Text="Alege o poz? de profil" FontSize="28" FontAttributes="Bold" TextColor="{StaticResource LightGray}" />
        <Label Text="Po?i s?ri acest pas dac? dore?ti." TextColor="{StaticResource LightGray}" Opacity="0.7" />
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Border Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2" WidthRequest="180" HeightRequest="180">
                <Border.StrokeShape>
                    <Ellipse />
                </Border.StrokeShape>
                <Grid>
                    <Image x:Name="PreviewImage" Aspect="AspectFill" />
                    <Label x:Name="TapHint" Text="Tap pentru a selecta\n? ine ap?sat pt camer?" TextColor="{StaticResource LightGray}" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" />
                </Grid>
            </Border>
        </Grid>
        <Label x:Name="StatusLabel" TextColor="{StaticResource LightGray}" />
        <ActivityIndicator x:Name="BusyIndicator" IsVisible="False" IsRunning="False" />
        <Label x:Name="ErrorLabel" TextColor="Tomato" IsVisible="False" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Sari" Clicked="OnSkipClicked" BackgroundColor="{StaticResource MediumGray}" TextColor="{StaticResource LightGray}" />
            <Button Text="Finalizeaz?" Clicked="OnFinishClicked" BackgroundColor="{StaticResource PrimaryBlue}" TextColor="White" />
        </HorizontalStackLayout>
        <Button Text="Renun??" Clicked="OnCancelClicked" BackgroundColor="Transparent" TextColor="{StaticResource LightGray}" />
    </VerticalStackLayout>
</ContentPage>