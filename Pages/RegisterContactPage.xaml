<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.RegisterContactPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource DarkGray}">
    <VerticalStackLayout Padding="30,60" Spacing="24">
        <Label Text="Super!" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource LightGray}" />
        <Label Text="Introdu email si telefon." TextColor="{StaticResource LightGray}" Opacity="0.8" />
        <Frame BackgroundColor="{StaticResource MediumGray}" CornerRadius="14" Padding="10">
            <Entry x:Name="EmailEntry" Placeholder="Email" PlaceholderColor="{StaticResource LightGray}" TextColor="White" Keyboard="Email" />
        </Frame>
        <Frame BackgroundColor="{StaticResource MediumGray}" CornerRadius="14" Padding="10">
            <Entry x:Name="TelefonEntry" Placeholder="Telefon" PlaceholderColor="{StaticResource LightGray}" TextColor="White" Keyboard="Telephone" />
        </Frame>
        <Frame BackgroundColor="{StaticResource MediumGray}" CornerRadius="14" Padding="10">
            <Entry x:Name="ParolaEntry" Placeholder="Parola" PlaceholderColor="{StaticResource LightGray}" TextColor="White" IsPassword="True" />
        </Frame>
        <Frame BackgroundColor="{StaticResource MediumGray}" CornerRadius="14" Padding="10">
            <Entry x:Name="ConfirmParolaEntry" Placeholder="Confirma Parola" PlaceholderColor="{StaticResource LightGray}" TextColor="White" IsPassword="True" />
        </Frame>
        <Label x:Name="ErrorLabel" TextColor="Tomato" IsVisible="False" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Inapoi" Clicked="OnBack" BackgroundColor="{StaticResource MediumGray}" TextColor="{StaticResource LightGray}" />
            <Button Text="Continua" Clicked="OnNext" BackgroundColor="{StaticResource PrimaryBlue}" TextColor="White" />
        </HorizontalStackLayout>
        <Button Text="Renunta" Clicked="OnCancel" BackgroundColor="Transparent" TextColor="{StaticResource LightGray}" />
    </VerticalStackLayout>
</ContentPage>