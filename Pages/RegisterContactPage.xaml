<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.RegisterContactPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkGray}}">
    
    <ScrollView>
        <VerticalStackLayout Padding="30,50" Spacing="24">
            
            <!-- Progress Indicator -->
            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Step 1 - Complete -->
                <BoxView Grid.Column="0" BackgroundColor="#4CAF50" 
                         HeightRequest="4" CornerRadius="2" Margin="0,0,5,0"/>
                <!-- Step 2 - Active -->
                <BoxView Grid.Column="1" BackgroundColor="{StaticResource PrimaryBlue}" 
                         HeightRequest="4" CornerRadius="2" Margin="5,0"/>
                <!-- Step 3 - Inactive -->
                <BoxView Grid.Column="2" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                         HeightRequest="4" CornerRadius="2" Margin="5,0"/>
                <!-- Step 4 - Inactive -->
                <BoxView Grid.Column="3" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                         HeightRequest="4" CornerRadius="2" Margin="5,0,0,0"/>
            </Grid>
            
            <!-- Progress Text -->
            <Label Text="Pasul 2 din 4" 
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- Header Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Excelent! 🎉" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" 
                       HorizontalOptions="Center"/>
                <Label Text="Acum hai să configurăm adresa de email și parola pentru contul tău" 
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" 
                       Opacity="0.8" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Input Fields -->
            <VerticalStackLayout Spacing="20" Margin="0,20,0,0">
                
                <!-- Email -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Adresa de email" 
                           FontSize="14" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                           CornerRadius="12" 
                           Padding="0" 
                           HasShadow="False"
                           x:Name="EmailFrame">
                        <Grid>
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="exemplu@email.com" 
                                   PlaceholderColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                   BackgroundColor="Transparent"
                                   Keyboard="Email"
                                   Margin="16,12,50,12"
                                   TextChanged="OnEmailTextChanged"
                                   ReturnType="Next"/>
                            <!-- Email validation icon -->
                            <Label x:Name="EmailValidIcon" 
                                   Text="✓" 
                                   FontSize="18" 
                                   TextColor="#4CAF50"
                                   HorizontalOptions="End" 
                                   VerticalOptions="Center"
                                   Margin="0,0,16,0"
                                   IsVisible="False"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>

                <!-- Password -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Parola" 
                           FontSize="14" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                           CornerRadius="12" 
                           Padding="0" 
                           HasShadow="False"
                           x:Name="ParolaFrame">
                        <Grid>
                            <Entry x:Name="ParolaEntry" 
                                   Placeholder="Introdu o parolă" 
                                   PlaceholderColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                   BackgroundColor="Transparent"
                                   IsPassword="True"
                                   Margin="16,12,50,12"
                                   TextChanged="OnParolaTextChanged"
                                   ReturnType="Next"/>
                            <Button x:Name="ShowPasswordButton"
                                    Text="👁"
                                    BackgroundColor="Transparent"
                                    TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                                    FontSize="16"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    Margin="0,0,8,0"
                                    Padding="0"
                                    Clicked="OnShowPasswordClicked"/>
                        </Grid>
                    </Frame>
                    
                    <!-- Password Strength Indicator (informativ, nu pentru validare) -->
                    <HorizontalStackLayout Spacing="4" Margin="4,4,0,0">
                        <BoxView x:Name="StrengthBar1" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                                 WidthRequest="20" HeightRequest="3" CornerRadius="1.5"/>
                        <BoxView x:Name="StrengthBar2" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                                 WidthRequest="20" HeightRequest="3" CornerRadius="1.5"/>
                        <BoxView x:Name="StrengthBar3" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                                 WidthRequest="20" HeightRequest="3" CornerRadius="1.5"/>
                        <BoxView x:Name="StrengthBar4" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                                 WidthRequest="20" HeightRequest="3" CornerRadius="1.5"/>
                        <Label x:Name="StrengthLabel" Text="Puterea parolei" 
                               FontSize="12" 
                               TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                               VerticalOptions="Center"
                               Margin="8,0,0,0"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Confirm Password -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Confirmă parola" 
                           FontSize="14" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                           CornerRadius="12" 
                           Padding="0" 
                           HasShadow="False"
                           x:Name="ConfirmParolaFrame">
                        <Grid>
                            <Entry x:Name="ConfirmParolaEntry" 
                                   Placeholder="Rescrie parola" 
                                   PlaceholderColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                   BackgroundColor="Transparent"
                                   IsPassword="True"
                                   Margin="16,12,50,12"
                                   TextChanged="OnConfirmParolaTextChanged"
                                   ReturnType="Done"/>
                            <!-- Match indicator -->
                            <Label x:Name="PasswordMatchIcon" 
                                   Text="✓" 
                                   FontSize="18" 
                                   TextColor="#4CAF50"
                                   HorizontalOptions="End" 
                                   VerticalOptions="Center"
                                   Margin="0,0,16,0"
                                   IsVisible="False"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel" 
                   TextColor="#FF6B6B" 
                   IsVisible="False" 
                   FontSize="14"
                   Margin="4,0,0,0"/>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12" Margin="0,20,0,0">
                <Button x:Name="ContinueButton"
                        Text="Continuă" 
                        Clicked="OnNext" 
                        BackgroundColor="{StaticResource PrimaryBlue}" 
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold"
                        IsEnabled="False"/>
                
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Button Text="Înapoi" 
                            Clicked="OnBack" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                            TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                            CornerRadius="12"
                            HeightRequest="45"
                            WidthRequest="100"
                            FontSize="15"/>
                    
                    <Button Text="Renunță" 
                            Clicked="OnCancel" 
                            BackgroundColor="Transparent" 
                            TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                            FontSize="15"
                            WidthRequest="100"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Security Tips -->
            <Frame BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark={StaticResource MediumGray}}" 
                   CornerRadius="12" 
                   Padding="16" 
                   HasShadow="False"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="💡" FontSize="16" VerticalOptions="Start"/>
                        <Label Text="Informații despre parolă:" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Label Text="• Poți folosi orice parolă dorești&#10;• Indicatorul de putere te ajută să vezi cât de sigură este&#10;• Pentru siguranță maximă, combină litere, numere și simboluri" 
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                           Margin="24,0,0,0"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>