<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.SugestiiPage"
             Title="SugestiiPage"
             BackgroundColor="{StaticResource DarkGray}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" 
                           Padding="30,20,30,10"
                           Spacing="10">
            <Label Text="Sugestiile Tale"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource LightGray}"
                   HorizontalOptions="Center" />

            <Label Text="Planuri de vacanță personalizate"
                   FontSize="16"
                   TextColor="{StaticResource LightGray}"
                   HorizontalOptions="Center"
                   Opacity="0.8" />
        </VerticalStackLayout>

        <!-- Lista de sugestii DUMMY -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,10" Spacing="15">

                <!-- Sugestie 1 -->
                <Border BackgroundColor="{StaticResource MediumGray}"
                       Stroke="{StaticResource LightGray}"
                       StrokeThickness="0.5"
                       Padding="20,15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Vacanță la Mare în Grecia"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightGray}" />

                        <Label Text="Santorini, Fira - Grecia"
                               TextColor="{StaticResource PrimaryBlue}"
                               FontSize="14"
                               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="Buget: 2,500 €"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="13"
                                   Opacity="0.8" />

                            <Label Grid.Column="1"
                                   Text="15/03/2024"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="12"
                                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Sugestie 2 -->
                <Border BackgroundColor="{StaticResource MediumGray}"
                       Stroke="{StaticResource LightGray}"
                       StrokeThickness="0.5"
                       Padding="20,15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Weekend în Paris"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightGray}" />

                        <Label Text="Paris, Paris - Franța"
                               TextColor="{StaticResource PrimaryBlue}"
                               FontSize="14"
                               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="Buget: 1,200 €"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="13"
                                   Opacity="0.8" />

                            <Label Grid.Column="1"
                                   Text="10/03/2024"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="12"
                                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Sugestie 3 -->
                <Border BackgroundColor="{StaticResource MediumGray}"
                       Stroke="{StaticResource LightGray}"
                       StrokeThickness="0.5"
                       Padding="20,15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Aventură în Munții Carpați"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightGray}" />

                        <Label Text="Brașov, Brașov - România"
                               TextColor="{StaticResource PrimaryBlue}"
                               FontSize="14"
                               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="Buget: 800 €"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="13"
                                   Opacity="0.8" />

                            <Label Grid.Column="1"
                                   Text="08/03/2024"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="12"
                                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Sugestie 4 -->
                <Border BackgroundColor="{StaticResource MediumGray}"
                       Stroke="{StaticResource LightGray}"
                       StrokeThickness="0.5"
                       Padding="20,15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="City Break în Viena"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightGray}" />

                        <Label Text="Viena, Viena - Austria"
                               TextColor="{StaticResource PrimaryBlue}"
                               FontSize="14"
                               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="Buget: 1,000 €"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="13"
                                   Opacity="0.8" />

                            <Label Grid.Column="1"
                                   Text="05/03/2024"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="12"
                                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Sugestie 5 -->
                <Border BackgroundColor="{StaticResource MediumGray}"
                       Stroke="{StaticResource LightGray}"
                       StrokeThickness="0.5"
                       Padding="20,15">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Relaxare în Bali"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightGray}" />

                        <Label Text="Ubud, Bali - Indonezia"
                               TextColor="{StaticResource PrimaryBlue}"
                               FontSize="14"
                               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="Buget: 3,200 €"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="13"
                                   Opacity="0.8" />

                            <Label Grid.Column="1"
                                   Text="01/03/2024"
                                   TextColor="{StaticResource LightGray}"
                                   FontSize="12"
                                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource MediumGray}"
       Stroke="{StaticResource LightGray}"
       StrokeThickness="0.5"
       Padding="20,15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Relaxare în Bali"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="{StaticResource LightGray}" />

                        <Label Text="Ubud, Bali - Indonezia"
               TextColor="{StaticResource PrimaryBlue}"
               FontSize="14"
               FontAttributes="Italic" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                   Text="Buget: 3,200 €"
                   TextColor="{StaticResource LightGray}"
                   FontSize="13"
                   Opacity="0.8" />

                            <Label Grid.Column="1"
                   Text="01/03/2024"
                   TextColor="{StaticResource LightGray}"
                   FontSize="12"
                   Opacity="0.6" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>