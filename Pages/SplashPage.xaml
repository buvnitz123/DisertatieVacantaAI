<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.SplashPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkGray}}"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Background with subtle gradient effect -->
        <BoxView BackgroundColor="{AppThemeBinding Light=#F8FCFF, Dark={StaticResource DarkGray}}" />
        
        <!-- Main content -->
        <VerticalStackLayout VerticalOptions="Center" Spacing="40" Padding="40">
            
            <!-- App Title with enhanced styling -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label x:Name="TitleLabel"
                       Text="Vacation Planner AI" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                       HorizontalOptions="Center"
                       Opacity="0" />
                
                <Label x:Name="SubtitleLabel"
                       Text="Descopera destinatii incredibile cu ajutorul AI"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Opacity="0" />
            </VerticalStackLayout>
            
            <!-- Enhanced App Logo with background circle -->
            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                <!-- Background circle for logo -->
                <Border BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark={StaticResource MediumGray}}" 
                        WidthRequest="200" 
                        HeightRequest="200"
                        x:Name="LogoBackground"
                        Opacity="0">
                    <Border.StrokeShape>
                        <Ellipse />
                    </Border.StrokeShape>
                </Border>
                
                <!-- Main logo -->
                <Image x:Name="LogoImage"
                       Source="dotnet_bot.png"
                       HeightRequest="160"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       Opacity="0" />
                
                <!-- Travel icons around logo (decorative) -->
                <Label x:Name="Icon1" Text="✈️" FontSize="24" 
                       HorizontalOptions="Start" VerticalOptions="Start" 
                       Margin="20,30,0,0" Opacity="0"/>
                <Label x:Name="Icon2" Text="🏖️" FontSize="24" 
                       HorizontalOptions="End" VerticalOptions="Start" 
                       Margin="0,40,15,0" Opacity="0"/>
                <Label x:Name="Icon3" Text="🗺️" FontSize="24" 
                       HorizontalOptions="Start" VerticalOptions="End" 
                       Margin="15,0,0,35" Opacity="0"/>
                <Label x:Name="Icon4" Text="🎒" FontSize="24" 
                       HorizontalOptions="End" VerticalOptions="End" 
                       Margin="0,0,20,20" Opacity="0"/>
            </Grid>
            
            <!-- Enhanced Status Message with tips -->
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource MediumGray}}" 
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True"
                   x:Name="StatusFrame"
                   Opacity="0">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="💡" FontSize="18"/>
                        <Label Text="Sfat de calatorie:" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"/>
                    </HorizontalStackLayout>
                    
                    <Label x:Name="StatusLabel"
                           Text="Se initiaza aplicatia..."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Enhanced Progress Section -->
            <VerticalStackLayout Spacing="20" x:Name="ProgressSection" Opacity="0">
                <!-- Progress description with loading indicator -->
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label x:Name="ProgressDescriptionLabel"
                           Text="Se pregateste experienta ta..."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                           HorizontalOptions="Center" />
                    
                    <!-- Centered loading indicator -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="True"
                                       Color="{StaticResource PrimaryBlue}"
                                       WidthRequest="24" 
                                       HeightRequest="24"
                                       HorizontalOptions="Center" />
                </VerticalStackLayout>
                
                <!-- Progress Bar with enhanced styling -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                       CornerRadius="10" 
                       Padding="4" 
                       HasShadow="False"
                       Margin="20,0">
                    <ProgressBar x:Name="ProgressBar"
                                 Progress="0"
                                 ProgressColor="{StaticResource PrimaryBlue}"
                                 BackgroundColor="Transparent"
                                 HeightRequest="8" />
                </Frame>
                
                <!-- Progress percentage (centered) -->
                <Label x:Name="ProgressLabel"
                       Text="0%"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryBlue}"
                       HorizontalOptions="Center" />
                
                <!-- Loading steps indicator -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="12" Margin="0,8,0,0">
                    <BoxView x:Name="Step1" BackgroundColor="{StaticResource PrimaryBlue}" 
                             WidthRequest="10" HeightRequest="10" CornerRadius="5"/>
                    <BoxView x:Name="Step2" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                             WidthRequest="10" HeightRequest="10" CornerRadius="5"/>
                    <BoxView x:Name="Step3" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                             WidthRequest="10" HeightRequest="10" CornerRadius="5"/>
                    <BoxView x:Name="Step4" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                             WidthRequest="10" HeightRequest="10" CornerRadius="5"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Enhanced Error Section -->
            <Frame x:Name="ErrorFrame"
                   IsVisible="False"
                   BackgroundColor="#FF6B6B"
                   CornerRadius="16"
                   Padding="24"
                   HasShadow="True"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="⚠️" FontSize="24"/>
                        <Label Text="Oops! Ceva nu a mers bine"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />
                    </HorizontalStackLayout>
                    
                    <Label x:Name="ErrorLabel"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />
                    
                    <Button x:Name="RetryButton"
                            Text="🔄 Incearca din nou"
                            BackgroundColor="White"
                            TextColor="#FF6B6B"
                            CornerRadius="12"
                            HeightRequest="45"
                            FontSize="16"
                            FontAttributes="Bold"
                            Clicked="OnRetryClicked"
                            Margin="0,8,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
        
        <!-- App version info (bottom) -->
        <Label x:Name="VersionLabel"
               Text="v1.0.0"
               FontSize="12"
               TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20"
               Opacity="0" />

    </Grid>

</ContentPage>
