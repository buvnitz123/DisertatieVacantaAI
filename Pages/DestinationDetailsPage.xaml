<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDisertatieVacantaAI.Pages.DestinationDetailsPage"
             Title="Detalii Destinatie"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkGray}}">
    
    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="0" Spacing="0">
                
                <!-- Hero Image Section with Images Carousel -->
                <Frame Padding="0" CornerRadius="0" HasShadow="False" BackgroundColor="Transparent">
                    <Grid RowDefinitions="250,Auto" BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}">
                        
                        <!-- Images Carousel -->
                        <CarouselView x:Name="ImagesCarousel" 
                                      Grid.Row="0"
                                      IndicatorView="IndicatorView"
                                      BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}"
                                      HeightRequest="250">
                            <CarouselView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Image Source="{Binding ImagineUrl}" 
                                               Aspect="AspectFill"
                                               BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" />
                                        <BoxView BackgroundColor="Transparent" />
                                    </Grid>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>
                        
                        <!-- Rating Overlay in bottom-right corner -->
                        <Frame x:Name="RatingOverlay"
                               BackgroundColor="{StaticResource PrimaryBlue}"
                               CornerRadius="8"
                               Padding="8,4"
                               HasShadow="True"
                               HorizontalOptions="End"
                               VerticalOptions="End"
                               Margin="15,0,15,15"
                               IsVisible="False"
                               Grid.Row="0">
                            <StackLayout Orientation="Horizontal" Spacing="4">
                                <Label x:Name="AverageRatingLabel"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       VerticalOptions="Center" />
                                <Label x:Name="ReviewCountLabel"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.9"
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>
                        
                        <!-- Favorite Button in top-right corner -->
                        <Button x:Name="FavoriteButton"
                                Text="🤍"
                                FontSize="24"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderWidth="0"
                                Padding="8"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20"
                                HorizontalOptions="End"
                                VerticalOptions="Start"
                                Margin="0,15,15,0"
                                IsVisible="True"
                                Grid.Row="0"
                                Clicked="OnFavoriteClicked" />
                        
                        <!-- Loading indicator for images -->
                        <ActivityIndicator x:Name="ImagesLoadingIndicator"
                                          Grid.Row="0"
                                          IsRunning="False"
                                          IsVisible="False"
                                          Color="{StaticResource PrimaryBlue}"
                                          VerticalOptions="Center"
                                          HorizontalOptions="Center" />
                        
                        <!-- No Images Message -->
                        <StackLayout x:Name="NoImagesLayout" 
                                    Grid.Row="0"
                                    IsVisible="False"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Spacing="10">
                            <Label Text="📷" FontSize="48" HorizontalOptions="Center" 
                                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                            <Label Text="Nu sunt disponibile imagini" 
                                   FontSize="16" 
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                        </StackLayout>
                        
                        <!-- Indicator View -->
                        <IndicatorView x:Name="IndicatorView" 
                                       Grid.Row="1"
                                       IndicatorColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}"
                                       SelectedIndicatorColor="{StaticResource PrimaryBlue}"
                                       HorizontalOptions="Center"
                                       Margin="0,10,0,10" />
                    </Grid>
                </Frame>
                
                <!-- Main Content -->
                <StackLayout Padding="20" Spacing="20" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkGray}}">
                    
                    <!-- Header Information -->
                    <StackLayout Spacing="10">
                        <Label x:Name="DestinationNameLabel" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="📍" FontSize="16" />
                            <Label x:Name="LocationLabel" 
                                   FontSize="16" 
                                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                        </HorizontalStackLayout>
                        
                        <!-- Price Information -->
                        <Frame BackgroundColor="{StaticResource PrimaryBlue}" 
                               CornerRadius="12" 
                               Padding="15"
                               HasShadow="False">
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="💰 Pret Adult" 
                                       FontSize="14" 
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Row="1" Grid.Column="0" 
                                       x:Name="AdultPriceLabel" 
                                       FontSize="18" 
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="👶 Pret Minor" 
                                       FontSize="14" 
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Row="1" Grid.Column="1" 
                                       x:Name="ChildPriceLabel" 
                                       FontSize="18" 
                                       TextColor="White"
                                       FontAttributes="Bold" />
                            </Grid>
                        </Frame>
                    </StackLayout>
                    
                    <!-- Description Section -->
                    <StackLayout x:Name="DescriptionSection" Spacing="10">
                        <Label Text="📝 Descriere" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource MediumGray}}" 
                               CornerRadius="12" 
                               Padding="15"
                               HasShadow="False">
                            <Label x:Name="DescriptionLabel" 
                                   FontSize="16" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                   LineBreakMode="WordWrap" />
                        </Frame>
                    </StackLayout>
                    
                    <!-- Categories Section -->
                    <StackLayout x:Name="CategoriesSection" Spacing="15" IsVisible="False">
                        <Label Text="🏷️ Categorii" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        
                        <CollectionView x:Name="CategoriesCollectionView" 
                                        SelectionMode="None"
                                        BackgroundColor="Transparent"
                                        HeightRequest="100">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="12" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource MediumGray}}" 
                                           CornerRadius="8" 
                                           Padding="0"
                                           HasShadow="True"
                                           WidthRequest="80"
                                           HeightRequest="80"
                                           Margin="0,5">
                                        <Grid>
                                            <Image Source="{Binding ImagineUrl}" 
                                                   Aspect="AspectFill"
                                                   BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}" />
                                            
                                            <!-- Dark overlay for text readability -->
                                            <BoxView BackgroundColor="Black" 
                                                     Opacity="0.4" 
                                                     VerticalOptions="End" 
                                                     HeightRequest="25" />
                                            
                                            <!-- Category name -->
                                            <Label Text="{Binding Denumire}" 
                                                   FontSize="11" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End"
                                                   Margin="2,0,2,3"
                                                   LineBreakMode="TailTruncation"
                                                   MaxLines="1" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                    
                    <!-- Facilities Section -->
                    <StackLayout x:Name="FacilitiesSection" Spacing="15" IsVisible="False">
                        <Label Text="🏨 Facilități" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        
                        <CollectionView x:Name="FacilitiesCollectionView" 
                                        SelectionMode="None"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource MediumGray}}" 
                                           CornerRadius="12" 
                                           Padding="15"
                                           HasShadow="True"
                                           Margin="0,2">
                                        <StackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="🏨" 
                                                       FontSize="16" 
                                                       VerticalOptions="Center" />
                                                <Label Text="{Binding Denumire}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="StartAndExpand" />
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Descriere}" 
                                                   FontSize="14" 
                                                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                                                   LineBreakMode="WordWrap"
                                                   IsVisible="{Binding HasDescription}"
                                                   Margin="24,0,0,0" />
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                    
                    <!-- Points of Interest Section -->
                    <StackLayout x:Name="PointsOfInterestSection" Spacing="15">
                        <Label Text="🎯 Puncte de Interes" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        
                        <CollectionView x:Name="PointsOfInterestCollectionView" 
                                        SelectionMode="None"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource MediumGray}}" 
                                           CornerRadius="8" 
                                           Padding="15"
                                           HasShadow="True"
                                           Margin="0,5">
                                        <StackLayout Spacing="12">
                                            
                                            <!-- POI Header with Name and Type -->
                                            <HorizontalStackLayout Spacing="10" VerticalOptions="Start">
                                                <Label Text="{Binding Denumire}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="StartAndExpand" />
                                                <Frame BackgroundColor="{StaticResource PrimaryBlue}" 
                                                       CornerRadius="8" 
                                                       Padding="6,3"
                                                       HasShadow="False"
                                                       IsVisible="{Binding HasTip}">
                                                    <Label Text="{Binding Tip}" 
                                                           FontSize="11" 
                                                           FontAttributes="Bold"
                                                           TextColor="White" />
                                                </Frame>
                                            </HorizontalStackLayout>
                                            
                                            <!-- POI Description -->
                                            <Label Text="{Binding Descriere}" 
                                                   FontSize="14" 
                                                   TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}"
                                                   LineBreakMode="WordWrap"
                                                   IsVisible="{Binding HasDescription}"
                                                   Margin="0,0,0,8" />
                                            
                                            <!-- Images Grid - Maximum 3 images horizontally -->
                                            <CollectionView ItemsSource="{Binding Images}" 
                                                          BackgroundColor="Transparent"
                                                          HeightRequest="100">
                                                <CollectionView.ItemsLayout>
                                                    <LinearItemsLayout Orientation="Horizontal" 
                                                                     ItemSpacing="8" />
                                                </CollectionView.ItemsLayout>
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Frame CornerRadius="6" 
                                                               Padding="0" 
                                                               HasShadow="False"
                                                               BackgroundColor="Transparent"
                                                               WidthRequest="100"
                                                               HeightRequest="100">
                                                            <Image Source="{Binding ImagineUrl}" 
                                                                   Aspect="AspectFill"
                                                                   BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}" />
                                                        </Frame>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                            
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                    
                    <!-- Reviews Section -->
                    <StackLayout x:Name="ReviewsSection" Spacing="15" IsVisible="False">
                        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                            <Label Text="⭐ Recenzii" 
                                   FontSize="20" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                   HorizontalOptions="StartAndExpand" />
                            
                            <Button Text="✍️ Scrie recenzie"
                                    BackgroundColor="{StaticResource PrimaryBlue}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="12,6"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    Clicked="OnAddReviewClicked" />
                        </HorizontalStackLayout>
                        
                        <!-- Reviews List (Last 5 reviews) -->
                        <CollectionView x:Name="ReviewsCollectionView" 
                                        SelectionMode="None"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource MediumGray}}" 
                                           CornerRadius="12" 
                                           Padding="15"
                                           HasShadow="True"
                                           Margin="0,2">
                                        <StackLayout Spacing="10">
                                            
                                            <!-- Review Header -->
                                            <HorizontalStackLayout Spacing="12" VerticalOptions="Start">
                                                <!-- Profile Photo Circle -->
                                                <Frame BackgroundColor="{StaticResource PrimaryBlue}"
                                                       CornerRadius="20"
                                                       Padding="2"
                                                       HasShadow="False"
                                                       WidthRequest="40"
                                                       HeightRequest="40">
                                                    <Grid>
                                                        <!-- User Profile Photo (always shows, falls back to default) -->
                                                        <Frame BackgroundColor="White"
                                                               CornerRadius="18"
                                                               Padding="0"
                                                               HasShadow="False">
                                                            <Image Source="{Binding UserProfilePhoto}" 
                                                                   Aspect="AspectFill"
                                                                   BackgroundColor="#F0F0F0" />
                                                        </Frame>
                                                        
                                                    </Grid>
                                                </Frame>
                                                
                                                <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Spacing="2">
                                                    <Label Text="{Binding UserName}" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                                                    <Label Text="{Binding FormattedDate}" 
                                                           FontSize="12" 
                                                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                                                </StackLayout>
                                                
                                                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}"
                                                       CornerRadius="8"
                                                       Padding="8,4"
                                                       HasShadow="False">
                                                    <Label Text="{Binding StarsDisplay}" 
                                                           FontSize="14" 
                                                           TextColor="{StaticResource PrimaryBlue}"
                                                           FontAttributes="Bold" />
                                                </Frame>
                                            </HorizontalStackLayout>
                                            
                                            <!-- Review Comment -->
                                            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}"
                                                   CornerRadius="8"
                                                   Padding="12"
                                                   HasShadow="False"
                                                   IsVisible="{Binding HasComment}">
                                                <Label Text="{Binding Comment}" 
                                                       FontSize="14" 
                                                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                                                       LineBreakMode="WordWrap" />
                                            </Frame>
                                            
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <StackLayout Spacing="15" Padding="20" HorizontalOptions="Center">
                                    <Label Text="💭" 
                                           FontSize="48" 
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                                    <Label Text="Nu există încă recenzii pentru această destinație" 
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                                    <Label Text="Fii primul care scrie o recenzie!" 
                                           FontSize="14"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource MediumGray}, Dark={StaticResource LightGray}}" />
                                </StackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </StackLayout>
                    
                    <!-- Bottom spacing -->
                    <BoxView HeightRequest="20" IsVisible="False" />
                    
                </StackLayout>
            </StackLayout>
        </ScrollView>
        
        <!-- Loading Overlay - moved to be last in Grid so it's on top -->
        <Grid x:Name="LoadingOverlay" 
              IsVisible="False"
              BackgroundColor="{StaticResource LoadingOverlayBackground}"
              ZIndex="1000">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <ActivityIndicator IsRunning="True" 
                                  Color="{StaticResource PrimaryBlue}" 
                                  WidthRequest="50" 
                                  HeightRequest="50" />
                <Label Text="Se incarca detaliile destinatiei..." 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>